<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.2.xsd
		http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc-4.2.xsd">

    <import resource="classpath:spring/applicationContext-cache.xml"/>

    <mvc:default-servlet-handler/>
    <context:component-scan base-package="com.pos.web"/>

    <mvc:annotation-driven>
        <mvc:argument-resolvers>
            <bean class="com.pos.user.session.UserSessionArgResolver">
                <constructor-arg>
                    <ref bean="defaultRedis"/>
                </constructor-arg>
                <property name="httpSessionEnable" value="${user.session.httpSessionEnable}"/>
            </bean>
        </mvc:argument-resolvers>
        <mvc:message-converters register-defaults="true">
            <bean class="org.springframework.http.converter.json.MappingJackson2HttpMessageConverter">
                <property name="objectMapper">
                    <!-- Response不序列化值为null的字段 -->
                    <bean class="com.fasterxml.jackson.databind.ObjectMapper">
                        <property name="serializationInclusion" value="NON_EMPTY"/>
                    </bean>
                </property>
            </bean>
        </mvc:message-converters>
    </mvc:annotation-driven>

    <bean class="com.mangofactory.swagger.configuration.SpringSwaggerConfig"/>

    <bean class="com.pos.common.util.exception.GlobalExceptionHandler">
        <constructor-arg>
            <value>${global.exception.enable}</value>
        </constructor-arg>
    </bean>

</beans>
